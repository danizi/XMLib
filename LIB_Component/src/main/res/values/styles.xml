<resources xmlns:ns1="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="suibowen" parent="android:Widget">
        <item name="android:stateListAnimator" ns1:ignore="NewApi,PrivateResource">
            @animator/design_appbar_state_list_animator
        </item>
        <item name="android:keyboardNavigationCluster" ns1:ignore="NewApi">true</item>
        <item name="android:touchscreenBlocksFocus" ns1:ignore="NewApi">true</item>
        <item name="colorControlHighlight">@color/textPrimaryRedBk</item>
    </style>

    <style name="pop_ani" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="TabLayoutSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
    </style>


    <!--自定义组件开关按钮-->
    <declare-styleable name="ToggleButton">
        <attr name="no_s" format="reference" />
        <attr name="no" format="reference" />
        <attr name="off_s" format="reference" />
        <attr name="off" format="reference" />
    </declare-styleable>


</resources>
